<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/time_of_day_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:paddingBottom="56dp">

        <LinearLayout
            android:id="@+id/current_weather_box"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:weightSum="2">

            <!-- Current Weather Info Box -->
            <LinearLayout
                android:id="@+id/current_weather_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20sp"
                android:paddingEnd="20sp"
                android:paddingTop="20sp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eau Claire, WI"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/current_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Â°F"
                    android:textSize="50sp"
                    />

                <TextView
                    android:id="@+id/current_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/current_precip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2% "
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_access_time_24"
                android:contentDescription="TODO"
                android:layout_weight="1"/>


        </LinearLayout>


        <!-- Morning Weather Info Box -->
        <LinearLayout
            android:id="@+id/morning_overview"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_background"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="52"
                android:textSize="24sp"
                android:textAlignment="center"/>

        </LinearLayout>


        <!-- Afternoon Weather Info Box -->
        <LinearLayout
            android:id="@+id/afternoon_overview"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

        </LinearLayout>

        <!-- Evening Weather Info Box -->
        <LinearLayout
            android:id="@+id/evening_overview"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

        </LinearLayout>

        <!-- Night Weather Info Box -->
        <LinearLayout
            android:id="@+id/night_overview"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1">

        </LinearLayout>

    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/today_nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>