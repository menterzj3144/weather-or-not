<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/time_of_day_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp"
        android:stretchColumns="*"
        >

        <!-- Current Weather Info Box -->
        <TableRow
            android:id="@+id/current_weather_box"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/current_weather_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="20dp"
                >

                <TextView
                    android:id="@+id/current_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eau Claire, WI"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/current_weather_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 °F"
                    android:textSize="40sp"
                    />

                <TextView
                    android:id="@+id/current_weather_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/current_weather_precip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2% "
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/current_weather_img"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/weather_condition_image"
                android:src="@drawable/ic_baseline_wb_sunny_24"
                android:padding="20dp"/>


        </TableRow>


        <TableRow>
            <!-- Morning Weather Info Box -->
            <LinearLayout
                android:id="@+id/morning_weather_overview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/timeOfDayOverview"
                >

                <TextView
                    android:id="@+id/morning_weather_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/morning"
                    android:textSize="20sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/morning_weather_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 °F"
                    android:textSize="25sp"
                    android:gravity="center"

                    />

                <ImageView
                    android:id="@+id/morning_weather_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_wb_sunny_24"
                    android:contentDescription="@string/weather_condition_image"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/morning_weather_precip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2% "
                    android:textSize="15sp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <!-- Afternoon Weather Info Box -->
            <LinearLayout
                android:id="@+id/afternoon_weather_overview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/timeOfDayOverview"
                >

                <TextView
                    android:id="@+id/afternoon_weather_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/afternoon"
                    android:textSize="20sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/afternoon_weather_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 °F"
                    android:textSize="25sp"
                    android:gravity="center"

                    />

                <ImageView
                    android:id="@+id/afternoon_weather_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_wb_sunny_24"
                    android:contentDescription="@string/weather_condition_image"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/afternoon_weather_precip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2% "
                    android:textSize="15sp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </TableRow>



    </TableLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/today_nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>