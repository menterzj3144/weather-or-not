        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Day of the week  -->
            <TextView
                android:id="@+id/day1_name"
                style="@style/dayOfTheWeekLandscape"
                />

            <!-- API Info needed  -->

            <ImageView
                android:id="@+id/day1_weather_img"
                style="@style/iconLandscape"
                />
            <TextView
                android:id="@+id/day1_precip"
                style="@style/percentLandscape"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/day1_mintemp"
                style="@style/lowHighLandScape"
                android:text="@string/low"
                />

            <TextView
                style="@style/lowHighLandScape"
                android:text=""
                app:drawableStartCompat="@drawable/ic_arrowdown2_foreground" />

            <TextView
                android:id="@+id/day1_maxtemp"
                android:text="@string/high"
                style="@style/lowHighLandScape"/>

        </LinearLayout>

